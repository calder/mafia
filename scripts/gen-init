#!/bin/bash

cd "`dirname "$0"`"/../mafia

if [[ `uname` == 'Darwin' ]]; then
  REGEX_SED="sed -E"
else
  REGEX_SED="sed -r"
fi

exec > __init__.py

echo "# WARNING: THIS FILE IS AUTOGENERATED BY gen_init! DO NOT EDIT!"
echo

ls *.py \
| sed "/__/d" \
| $REGEX_SED "s|(.*)\.py|from \.\1 import \*|"
echo
